<?xml version="1.0"?>
<launch>

  <let name="pkg_share" value="$(find-pkg-share my_ur3)"/>

  <let name="urdf_path" value="$(var pkg_share)/urdf/ur3_mesh_based.urdf.xacro"/>

  <let name="world_path" value="$(var pkg_share)/worlds/my_world.world"/>

  <let name="bridge_config_path" value="$(var pkg_share)/config/gz_bridge.yaml"/>

  <include file="$(find-pkg-share ros_gz_sim)/launch/gz_sim.launch.py">
    <arg name="gz_args" value="-r -v 3 $(var world_path)"/>
  </include>

  <node pkg="robot_state_publisher" exec="robot_state_publisher">
    <param name="robot_description" value="$(command 'xacro $(var urdf_path)')"/>
  </node>

  <node pkg="ros_gz_sim" exec="create"
        args="-topic robot_description -entity caster_bot -x 0.0 -y 0.0 -z 0.05"
        output="screen"/>

  <node pkg="ros_gz_bridge" exec="parameter_bridge">
    <param name="config_file" value="$(var bridge_config_path)"/>
  </node>

  <node pkg="rviz2" exec="rviz2" name="rviz2"
        args="-d $(find-pkg-share my_robot_description)/rviz/display.rviz"/>

</launch>