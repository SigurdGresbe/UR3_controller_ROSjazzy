<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="ur3">
  
  <!--Link macro setup -->
  <xacro:macro name="link" params="prefix">
    <link name="${prefix}_link">
      <visual> 
        <geometry>
          <mesh filename="package://my_ur3/meshes/collision/${prefix}.stl" scale="1 1 1"/>
        </geometry>
        <material name="Gray_upperarm"><color rgba="0.5 0.5 0.5 1.0"/></material>
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://my_ur3/meshes/collision/${prefix}.stl" scale="1 1 1"/>
        </geometry>
      </collision>
    </link>
  </xacro:macro>

  <!--Joint macros setup -->
  <xacro:macro name="joint" params="prefix parent child xyz axis">
    <joint name="${prefix}_joint" type="revolute">
      <parent link="${parent}_link"/>
      <child link="${child}_link"/>
      <origin xyz="${xyz}"/>
      <axis xyz="${axis}"/>
      <limit effort="50.0" velocity="3.0" lower="-3.00" upper="3.00"/>
    </joint>
  </xacro:macro>

  <!--Link macros -->
  <xacro:link prefix="base"/>
  <xacro:link prefix="shoulder"/>
  <xacro:link prefix="upperarm"/>
  <xacro:link prefix="forearm"/>
  <xacro:link prefix="wrist1"/>
  <xacro:link prefix="wrist2"/>
  <xacro:link prefix="wrist3"/>

  <!--Joint macros -->
  <xacro:joint prefix="shoulder_pan" parent="base" child="shoulder" xyz="0 0 0.1519" axis="0 0 1"/>
  <xacro:joint prefix="shoulder_lift" parent="shoulder" child="upperarm" xyz="0 0.1198 0" axis="0 1 0"/>
  <xacro:joint prefix="elbow" parent="upperarm" child="forearm" xyz="0 -0.0925 0.24365" axis="0 1 0"/>
  <xacro:joint prefix="wrist1" parent="forearm" child="wrist1" xyz="0 0 0.21325" axis="0 1 0"/>
  <xacro:joint prefix="wrist2" parent="wrist1" child="wrist2" xyz="0 0.08505 0" axis="0 0 1"/>
  <xacro:joint prefix="wrist3" parent="wrist2" child="wrist3" xyz="0 0 0.08535" axis="0 1 0"/>

</robot>  
